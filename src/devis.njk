{% extends "default.njk" %}

{%
  set seo = {
    title: "Demander un devis pour votre jardin | Aux Jardins d’Adrien",
    description: "Obtenez un devis gratuit et rapide pour vos travaux paysagers à Vence.",
    canonical: "https://www.auxjardinsdadrien.com/devis",
    ogImage: "https://www.auxjardinsdadrien.com/images/logo_auxjardinsdadrien_light.png",
    breadcrumb: "Devis"
  }
%}

{% block styles %}
<link
  rel="stylesheet"
  href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
  crossorigin=""
/>
<link rel="stylesheet" href="/styles/maps.css{{ cacheBuster.query }}" />
{% endblock %}

{% block scripts %}
<script src="/scripts/form-utils.js{{ cacheBuster.query }}" defer></script>
<script src="/scripts/address-autocomplete.js{{ cacheBuster.query }}" defer></script>
<script src="/scripts/devis.js{{ cacheBuster.query }}" defer></script>
<script
  defer
  src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
  crossorigin=""
></script>
<script src="/scripts/maps.js{{ cacheBuster.query }}" defer></script>
{% endblock %}

{% block content %}
<!-- TITLE  -->
<section class="title" aria-label="Demande de devis">
  <div class="title-img">
    <img class="title-bg img-light" src="/images/creation_light.webp" alt="" aria-hidden="true" />
    <img class="title-bg img-dark" src="/images/creation_dark.webp" alt="" aria-hidden="true" />
    <div class="title-content">
      <h1>Demandez votre devis de jardin</h1>
      <p class="sub">
        Donnez-nous quelques informations pour recevoir un premier devis gratuit de vos travaux paysagers.
      </p>
    </div>
  </div>
</section>

<!-- ESTIMATION FORM -->
<section class="estimation">
  <div class="container">
    <h2>Pourquoi demander un devis ?</h2>
    <p>
      Cette étape nous permet de cerner vos attentes et de vous proposer un budget indicatif avant notre visite sur place.
    </p>
    <div class="zone-intervention-content">
      <form id="estimation-form" class="form" action="/forms/devis.php" method="post">
        <div class="honeypot" aria-hidden="true">
          <label for="estimation-check">Laissez ce champ vide</label>
          <input
            type="text"
            id="estimation-check"
            name="estimation_check"
            tabindex="-1"
            autocomplete="new-password"
            inputmode="none"
            data-lpignore="true"
          />
        </div>
        <div class="form-steps" data-step-container>
          <div class="form-step" id="form-step-1" data-step="1" role="group" aria-labelledby="form-step-1-heading">
            <p class="step-indicator" id="form-step-1-heading">Étape 1 sur 2</p>
            <div class="form-field has-icon">
              <input
                type="text"
                id="address"
                name="address"
                placeholder="Votre adresse"
                autocomplete="street-address"
                data-address-autocomplete
                required
              />
              <span class="field-icon field-icon-right" aria-hidden="true">
                <svg viewBox="0 0 24 24" focusable="false">
                  <path
                    d="M12 22c3.8-5 7-8.6 7-12a7 7 0 1 0-14 0c0 3.4 3.2 7 7 12zm0-9a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"
                    fill="currentColor"
                  ></path>
                </svg>
              </span>
            </div>
            <div class="form-field has-icon">
              <select type="text" id="project" name="project" placeholder="Sélectionnez un type de projet" required >
                <option value="" disabled selected>Sélectionnez votre projet</option>
                <option value="Création de jardin">Création de jardin</option>
                <option value="Aménagement extérieur">Aménagement extérieur</option>
                <option value="Entretien de jardin">Entretien de jardin</option>
                <option value="Elagage et Abattage">Élagage et Abattage</option>
                <option value="Debroussaillage">Débroussaillage</option>
                <option value="Potager">Potager</option>
                <option value="Autre">Autre</option>
              </select>
              <span class="field-icon field-icon-right" aria-hidden="true">
                <svg viewBox="0 0 24 24" focusable="false">
                  <path
                    d="M7 10l5 5 5-5"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.25"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  ></path>
                </svg>
              </span>
            </div>
            <div class="form-field">
              <textarea id="description" name="description" placeholder="Décrivez brièvement votre projet" required></textarea>
            </div>
            <button type="button" class="btn btn-lg btn-link" data-form-action="next">
              Suivant <i data-lucide="chevron-right" absolute-stroke="true"></i>
            </button>
          </div>
          <div class="form-step" id="form-step-2" data-step="2" role="group" aria-labelledby="form-step-2-heading" hidden>
            <p class="step-indicator" id="form-step-2-heading">Étape 2 sur 2</p>
            <div class="form-field">
              <input type="text" id="name" name="name" placeholder="Votre nom" required />
            </div>
            <div class="form-field">
              <input type="email" id="email" name="email" placeholder="Votre email" required />
            </div>
            <div class="form-field">
              <input type="tel" id="phone" name="phone" placeholder="Votre mobile" required />
            </div>
            <button class="btn btn-lg btn-primary" type="submit">Envoyer</button>
            <button type="button" class="btn btn-lg btn-link" data-form-action="previous">
              <i data-lucide="chevron-left" absolute-stroke="true"></i> Précédent
            </button>
          </div>
        </div>
      </form>
      <div>
        <div class="map-container">
          <div class="map-loader" id="map-loader">
            <div class="spinner"></div>
          </div>
          <div id="google-map"></div>
        </div>
      </div>
    </div>
  </div>

  <div id="estimation-popup" class="popup" hidden>
    <div class="popup-content">
      <p id="estimation-popup-message">Merci, nous revenons vers vous tres vite.</p>
      <button id="close-popup" class="btn btn-primary">Fermer</button>
    </div>
  </div>
</section>
{% endblock %}




