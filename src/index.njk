{% extends "default.njk" %}

{% 
  set seo = { 
    title: "Aux Jardins d’Adrien — Paysagiste & Maraîcher à Vence", 
    description: "Prenez contact pour votre projet de jardin à Vence.", 
    canonical: "https://www.auxjardinsdadrien.com", 
    ogImage: "https://www.auxjardinsdadrien.com/images/og-contact.jpg" 
  } 
%} 

{% block styles %}
<link rel="stylesheet" href="/styles/carrousel-hero.css" />
{% endblock %} 

{% block scripts %}
<script src="/scripts/carrousel-hero.js"></script>
<script src="/scripts/google-reviews.js"></script>
{% endblock %}

{% block content %}
<!-- HERO / CARROUSEL plein écran -->
<section id="hero" class="hero section-nopad" aria-label="Bannière principale">
  <div class="hero-slide">
    <!-- Image gérée par JS en background pour couvrir 100svh -->
    <div class="hero-content">
      <h1>Le bien-être prend racine dans votre jardin</h1>
      <p class="sub">Paysagiste & maraîcher à Vence — qualité, réactivité, savoir-faire</p>
      <div class="cta-row">
        <a class="btn btn-ghost btn-lg" href="/estimer" aria-label="Faites une estimation"
          >Faites une estimation</a
        >
        <a class="btn btn-ghost btn-lg" href="/contact" aria-label="Contactez nous"
          >Contactez nous</a
        >
      </div>
    </div>

    <!-- Contrôles carrousel -->
    <div class="carousel-controls" aria-label="Contrôles du carrousel">
      <button class="dot" data-slide="0" aria-label="Slide 1"></button>
      <button class="dot" data-slide="1" aria-label="Slide 2"></button>
      <button class="dot" data-slide="2" aria-label="Slide 3"></button>
      <button class="dot" data-slide="3" aria-label="Slide 4"></button>
      <button class="dot" data-slide="4" aria-label="Slide 5"></button>
    </div>
  </div>
</section>

<!-- SERVICES -->
<section class="services" aria-label="Nos services">
  <div class="container">
    <h2>Nos services</h2>
    <ul class="cards">
      <li class="card" data-href="creation">
        <div class="card-img">
          <!-- Image pour le thème clair -->
          <img
            class="img-light"
            src="/images/creation_light.webp"
            alt=""
            aria-hidden="true"
            loading="lazy"
          />
          <!-- Image pour le thème sombre -->
          <img
            class="img-dark"
            src="/images/creation_dark.webp"
            alt=""
            aria-hidden="true"
            loading="lazy"
          />
        </div>
        <div class="card-content">
          <h3 class="card-title">Création</h3>
          <p class="card-text">
            Conception et aménagement de jardins sur-mesure, élégants et durables.
          </p>
        </div>
        <footer class="card-footer">
          <a class="link" href="/creation" aria-label="Découvrir la création">Découvrir</a>
        </footer>
      </li>

      <li class="card" data-href="/entretien">
        <div class="card-img">
          <!-- Image pour le thème clair -->
          <img
            class="img-light"
            src="/images/entretien_light.webp"
            alt=""
            aria-hidden="true"
            loading="lazy"
          />
          <!-- Image pour le thème sombre -->
          <img
            class="img-dark"
            src="/images/entretien_dark.webp"
            alt=""
            aria-hidden="true"
            loading="lazy"
          />
        </div>
        <div class="card-content">
          <h3 class="card-title">Entretien</h3>
          <p class="card-text">
            Contrats annuels et interventions ponctuelles. Crédit d’impôt 50%.
          </p>
        </div>
        <footer class="card-footer">
          <a class="link" href="/entretien" aria-label="Découvrir l’entretien">Découvrir</a>
        </footer>
      </li>

      <li class="card" data-href="/maraichage">
        <div class="card-img">
          <!-- Image pour le thème clair -->
          <img
            class="img-light"
            src="/images/maraichage_light.webp"
            alt=""
            aria-hidden="true"
            loading="lazy"
          />
          <!-- Image pour le thème sombre -->
          <img
            class="img-dark"
            src="/images/maraichage_dark.webp"
            alt=""
            aria-hidden="true"
            loading="lazy"
          />
        </div>
        <div class="card-content">
          <h3 class="card-title">Maraîchage</h3>
          <p class="card-text">
            Micro-ferme locale : vente de légume de saison et atelier potager.
          </p>
        </div>
        <footer class="card-footer">
          <a class="link" href="/maraichage" aria-label="Découvrir le maraîchage">Découvrir</a>
        </footer>
      </li>
    </ul>
  </div>
</section>

<!-- NOS VALEURS  -->
<section class="quote section-text section-elevated" aria-label="Mot du président">
  <div class="container">
    <blockquote class="quote-content">
      <p>
        Un jardin est la nature devenu art pour créer votre havre de paix.
      </p>
      <cite>Adrien Goffoz</cite>
    </blockquote>
  </div>
</section>

<!-- TEMOIGNAGES -->
<section class="testimonials" aria-label="Témoignages">
  <div class="container">
    <h2>Ce que disent nos clients</h2>
    <div class="cards" id="google-reviews"></div>
    <a
      class="btn btn-primary"
      href="https://search.google.com/local/reviews?placeid=ChIJoTkJZTjVzRIR44HWogEyy_M"
      target="_blank"
      rel="noopener"
      >Voir plus d'avis</a
    >
  </div>
</section>
{% endblock %}
