{% set seo = { title: "Aux Jardins d’Adrien — Paysagiste & Maraîcher à Vence", description: "Prenez
contact pour votre projet de jardin à Vence.", canonical: "https://www.auxjardinsdadrien.com",
ogImage: "https://www.auxjardinsdadrien.com/images/og-contact.jpg" } %} {% extends "default.njk" %}
{% block styles %}
<link rel="stylesheet" href="/styles/maps.css" />
{% endblock %} {% block scripts %}
<script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js" defer></script>
<script src="/scripts/contact.js" defer></script>
<script src="/scripts/maps.js" defer></script>
<script
  async
  defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAEGFBK_ZLae9kogIr_tH4kZW-yoKidTkI&callback=initMap&loading=async&libraries=geometry"
></script>
{% endblock %} {% block content %}
<!-- TITLE -->
<section class="title">
  <div class="title-img">
    <img class="title-bg img-light" src="/images/entretien_light.webp" alt="" aria-hidden="true" />
    <img class="title-bg img-dark" src="/images/entretien_dark.webp" alt="" aria-hidden="true" />
    <div class="title-content">
      <h1>Contact</h1>
      <p class="sub">Parlons de votre projet de jardin à Vence.</p>
    </div>
  </div>
</section>

<!-- CONTACT FORM -->
<section class="">
  <div class="container">
    <h2>Envoyez-nous un message</h2>
    <div class="zone-intervention-content">
      <form id="contact-form" class="contact-form" action="#" method="post">
        <div class="form-field">
          <input type="text" id="name" name="name" placeholder="Votre nom" required />
        </div>
        <div class="form-field">
          <input type="email" id="email" name="email" placeholder="Votre email" required />
        </div>
        <div class="form-field">
          <input type="tel" id="phone" name="phone" placeholder="Votre mobile" />
        </div>
        <div class="form-field">
          <textarea id="message" name="message" placeholder="Votre message" required></textarea>
        </div>
        <button class="btn btn-lg btn-primary" type="submit">Envoyer</button>
      </form>
      <div>
        <p style="margin-top: 0">
          Nous intervenons dans un rayon de <strong>20 kilomètres autour de Vence</strong>.
        </p>
        <div class="map-container">
          <div class="map-loader" id="map-loader">
            <div class="spinner"></div>
          </div>
          <div id="google-map"></div>
        </div>
      </div>
    </div>
  </div>

  <div id="contact-popup" class="popup" hidden>
    <div class="popup-content">
      <p>Merci, nous vous contactons rapidement.</p>
      <button id="close-popup" class="btn btn-primary">Fermer</button>
    </div>
  </div>
</section>
{% endblock %}
